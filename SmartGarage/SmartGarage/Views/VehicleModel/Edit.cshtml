@model VehicleModelViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutForPopup.cshtml";
}

<div class="container" enctype="multipart/form-data" asp-action="Edit">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger" id="edit"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Manufacturers"></label>
        </div>
        <div class="form-group">
            <select asp-for="ManufacturerId" asp-items="Model.Manufacturers.ToSelectList()" class="form-control"></select>
            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="VehicleTypes"></label>
        </div>
        <div class="form-group">
            <select asp-for="VehicleTypeId" asp-items="Model.VehicleTypes.ToSelectList()" class="form-control"></select>
            <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary btn-block" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#edit").validate({
            submitHandler: function (form) {
                form.submit();
            }
        });
    </script>
}

