@model GetOrderDTO

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	tbody {
		flex: 1 1 auto;
		display: block;
		overflow-y: auto;
		overflow-x: hidden;
	}

	tr {
		width: 100%;
		display: table;
		table-layout: fixed;
	}
</style>
<div class="container">
	<div class="dropdown float-right">
		<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			Currency
		</a>

		<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
			<a class="dropdown-item" href="/Order/Details/@Model.Id?currency=USD">USD</a>
			<a class="dropdown-item" href="/Order/Details/@Model.Id?currency=GBP">GBP</a>
			<a class="dropdown-item" href="/Order/Details/@Model.Id?currency=EUR">EUR</a>
		</div>
	</div>
	<div>
		<h4>Order</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2"> 
				@Html.DisplayNameFor(model => model.CustomerName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CustomerName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.OrderStatus)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.OrderStatus)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ArrivalDate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ArrivalDate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.FinishDate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.FinishDate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.VehicleNumberPlate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.VehicleNumberPlate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Services)
			</dt>
			<dd class="col-sm-10">
				<table class="table w-50" id="table" >
					<thead>
						<tr>
							<th class="w-25">#</th>
							<th>Description</th>
							<th>Price</th>
						</tr>
					</thead>
					<tbody style="height: 350px;overflow-y: scroll;width:fit-content">
						@{ int count = 1;

							foreach (var item in Model.Services)
							{
								<tr class="table-active">
									<td class="w-25">@count</td>
									<td>@item.Name</td>
									<td>@Math.Round(item.Price, 2)</td>
								</tr>
								count++;
							}
						}
					</tbody>
				</table>
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.TotalPrice)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.TotalPrice)
			</dd>
		</dl>
	</div>

	<div>
		<a class="btn btn-primary" asp-action="Index">Back to list</a>
	</div>
</div>



