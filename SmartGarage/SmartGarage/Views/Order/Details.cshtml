@model GetOrderDTO

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	tbody {
		flex: 1 1 auto;
		display: block;
		overflow-y: auto;
		overflow-x: hidden;
	}

	tr {
		width: 100%;
		display: table;
		table-layout: fixed;
	}
</style>
<div class="container">
	<div>
		<h4>Order</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CustomerName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CustomerName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.OrderStatus)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.OrderStatus)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ArrivalDate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ArrivalDate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.FinishDate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.FinishDate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.VehicleNumberPlate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.VehicleNumberPlate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ServicesDTO)
			</dt>
			<dd class="col-sm-10">
				<table class="table w-50" id="table">
					<thead>
						<tr>

							<th>Description</th>
							<th>Price</th>

						</tr>
					</thead>
					<tbody style="height: 150px;overflow: scroll;">
						@foreach (var item in Model.ServicesDTO)
						{

							<tr class="table-active">
								<td>@item.Name</td>
								<td>@item.Price</td>
							</tr>
						}
					</tbody>
				</table>
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.TotalPrice)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.TotalPrice)
			</dd>
		</dl>
	</div>

	<div>
		<a class="btn btn-primary" asp-action="Index">Back to list</a>
	</div>
</div>

