@model PaginatedList<GetServiceDTO>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-image: url('https://localhost:5001/images/Vehicles.jpg')">
	<div class="container col-4 mt-md-4 pt-3 mb-4 pb-1" style="background-color:#212529">
		<div class="form-actions no-color">
			<p>
				<input type="submit" value="Search" class="btn btn-outline-success" id="search" />
				<input type="text" name="numberPlate" placeholder="NumberPlate" id="numberPlate" />
				<input type="date" name="date" placeholder="DD/MM/YYYY" id="date" />
				@if (User.IsInRole("Customer"))
				{
					<a class="btn btn-outline-primary float-right" style="" asp-action="Index" role="button">All Services</a>
				}
			</p>
		</div>
		<div id="partialView">
			<partial name="ServiceCustomer_Table_Partial" model="@Model" />
		</div>
	</div>
</body>



@section Scripts {
	@{
		<script src="~/js/Custom_scripts/IndexCustomer_Service.js"></script>
	}
}
