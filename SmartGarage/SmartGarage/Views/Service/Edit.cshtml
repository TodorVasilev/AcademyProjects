@model ServiceEditViewModel

@{
	Layout = "~/Views/Shared/_LayoutForPopup.cshtml";
}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form asp-action="Edit" id="editService" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" name="name" class="form-control" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control box-shadow" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;" />
					<span asp-validation-for="Price" class="text-danger" id="price"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Update" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>	
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script>

		$("#editService").validate({
			submitHandler: function (form) {
				form.submit();
			}
		});
	</script>
}