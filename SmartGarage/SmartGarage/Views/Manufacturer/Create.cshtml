@model ManufacturerDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutForPopup.cshtml";
}

<div class="container text-center">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" id="create"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-0 pb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#create").validate({
            submitHandler: function (form) {
                form.submit();
            }
        });
    </script>
}